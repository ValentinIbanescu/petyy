<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for @pet do |f| %>
          <%= f.input :name, placeholder: 'Pet name' %>
          <%= f.input :age, placeholder: 'Pet age' %>
          <%= f.input :category, placeholder: 'Category', collection: %w[Cat Dog Snakes Crocodile Tiger Mongoose Cow Monkey
Coati Gemsbok Dugong Hartebeest Steer Chipmunk Basilisk Ewe Kangaroo Bunny Fish Mustang Gopher Ocelot Chimpanzee Badger] %>
          <%= f.input :medical_situation, placeholder: 'Medical condition' %>
          <%= f.input :diet, placeholder: 'Diet' %>
          <%= f.input :photo, as: :file%>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
